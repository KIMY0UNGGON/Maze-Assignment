package Maze;

public class Entity {
	private int hp;
	public final int MAXHP;
	private String img;
	private String Name;
	private int AttackValue;
	public Entity(int hp, String img, String Name) {
		this.MAXHP = hp;
		this.hp = hp;
		this.img = img;
		this.Name = Name;
	}

	public void MinusHp(int hp) {
		this.hp -= hp;
	}
	public void recovery(int hp) {
		this.hp += hp;
	}
	
	public String getImg() {return img;}
	
	public int getHp() {return hp;}
	public LinkedList<Item> getBag(){ return null;}
	public void Attack(Entity e) { //무기가 없을때의 공격
		int damage = (int) (Math.random()*(hp/10)); //0~ 현재 플레이어의 hp/10 사이의 데미지로 공격
		e.MinusHp(damage);
	}
	public void setAttack(int value) {
		this.AttackValue = value;
	}
	public int getAttack() {
		return AttackValue;
	}
	public String getName() {
		return Name;
	}
	public void getStatus() {
		System.out.println(getName());
		System.out.println("현재 체력 : "+getHp());
	}
}
